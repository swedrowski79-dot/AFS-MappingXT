parameters:
    level: 5
    paths:
        - api
        - classes
        - src
        - scripts
        - autoload.php
        - config.php
        - index.php
        - indexcli.php
    excludePaths:
        - vendor
        - db
        - logs
        - Files
        - docker
    ignoreErrors:
        # Ignore missing SQLite3 class if extension not loaded during analysis
        - '#Class SQLite3 not found#'
        # Ignore dynamic property access patterns common in this codebase
        - '#Access to an undefined property object::#'
    checkMissingIterableValueType: false
